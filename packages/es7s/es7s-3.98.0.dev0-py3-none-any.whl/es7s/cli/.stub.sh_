__SELF="$(basename "$0" | sed -Ee 's/\..+$//')"
__USAGE="$(cat <<-EOL
Description.

Usage:
    ${__SELF} -
EOL
)"

__usage() { echo "$__USAGE" ; exit "${1:-0}" ; }
  __die() { echo "$@"       ; exit 1 ; }
 __main() {
    :
}

# arg1 required:  [[ $# -lt 1 ]]
# arg1 forbidden: [[ $# -gt 1 ]] || [[ $* =~ (--)?help ]]
# arg1 optional:  [[ $# -gt 1 ]] && [[ $* =~ (--)?help ]]
[[ $* =~ (--)?help ]] && echo "$__USAGE" && exit
__main "$@"
