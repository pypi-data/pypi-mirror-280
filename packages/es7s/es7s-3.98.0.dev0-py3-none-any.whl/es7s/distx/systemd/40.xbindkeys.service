# @SCOPE=user

[Unit]
Description=xbindkeys

[Service]
Type=simple
KillMode=process
Restart=always
RestartSec=1
ExecStart=/usr/bin/xbindkeys -n -f /home/%USER/.es7s/data/conf/xbindkeysrc --verbose
Environment="ES7S_CLI=/home/%USER/.local/bin/es7s"
Environment="PATH=/home/%USER/.local/bin:/home/%USER/.es7s/bin:/usr/bin:/usr/local/bin"

[Install]
WantedBy=graphical-session.target
