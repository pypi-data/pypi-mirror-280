# @SCOPE=global

[Unit]
Description=es7s/daemon
Wants=es7s-indicators.service
After=multi-user.target
StartLimitIntervalSec=0

[Service]
Type=simple
Restart=always
RestartSec=10
RuntimeDirectory=es7s
ExecStart=/home/%USER/.local/bin/es7s-daemon
RemainAfterExit=yes
User=%UID

[Install]
WantedBy=multi-user.target
