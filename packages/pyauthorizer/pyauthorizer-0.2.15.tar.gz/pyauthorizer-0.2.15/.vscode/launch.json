    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "python": "${command:python.interpreterPath}",
            "args": [
                "create",
                "-f",
                "simple",
                "-C",
                "password=1234567890",
                "-O",
                "/tmp/license.json"
            ],
            "cwd": "${workspaceFolder}",
            "stopOnEntry": true,
            "justMyCode": false
        },
        {
            "name": "Python: Module",
            "type": "python",
            "request": "launch",
            "python": "${command:python.interpreterPath}",
            "module": "pyauthorizer",
            "args": [
                "create",
                "-f",
                "simple",
                "-C",
                "password=1234567890",
                "-O",
                "/tmp/license.json"
            ],
            "cwd": "${workspaceFolder}",
            "stopOnEntry": true,
            "justMyCode": false
        }
    ]
}
