{% extends "page.html.j2" %}

{% block container %}
<div class="row mb-1">
    <div class="col">
        <h1>Calendar</h1>
    </div>
</div>

<div class="row mb-1">
    <div class="col">
        <table class="table">
            <thead>
                <tr>
                    <th>Year</th>
                    {% for i in range(1, 13) %}
                    <th style="text-align: right;">{{ i }}</th>
                    {% endfor %}
                    <th style="text-align: right;">Total</th>
                </tr>
            </thead>
            <tbody>
                {% for year, month_data in monthly_distances.items() %}
                <tr>
                    <td>{{ year|round(0)|int }}</td>
                    {% for month in range(1, 13) %}
                    <td align="right">
                        {% set distance = month_data[month] %}
                        {% if distance %}
                        <a href="/calendar/{{ year|round(0)|int }}/{{ month }}">{{ distance|int() }} km</a>
                        {% else %}
                        0 km
                        {% endif %}
                    </td>
                    {% endfor %}
                    <td align="right">{{ yearly_distances[year]|int() }} km</td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</div>


{% endblock %}