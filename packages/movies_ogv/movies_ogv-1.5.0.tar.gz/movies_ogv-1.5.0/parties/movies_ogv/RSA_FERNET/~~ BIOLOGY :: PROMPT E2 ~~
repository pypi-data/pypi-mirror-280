	--cold-eph-folder "ACC/COLD_EPH_FOLDER" \
	--hot-folder "AMYGDALA_R/HOT_FOLDER" \
	--enzymes "ACC/ENZYMES"
	
	#---------------------------------------------------------------------
	
	#
	#	THIS DOES A "WIPE", MAKE SURE ACC IS 
	#	DISCONNECTED 
	#	
	movies_ogv rsa-fernet--cool-hot-folder \
	--hot-folder "AMYGDALA_R/HOT_FOLDER" \
	--enzymes "ENZYMES/1" \
	--o-cold-folder "AMYGDALA_L/COLD_FOLDER"
	
	#
	#	TO CLEAN UP THE COLD FOLDER
	#
	movies_ogv rsa-fernet--forget-eph-cold-folder --cold-folder "AMYGDALA_L/COLD_FOLDER"
	
	
	
