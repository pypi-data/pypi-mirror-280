# complete example config: https://github.com/stellar/stellar-core/blob/master/docs/stellar-core_example.cfg
LOG_FILE_PATH="{{ log_dir }}/stellar-core.log"
BUCKET_DIR_PATH="{{ bucket_dir }}"
DATABASE="postgresql://dbname={{ db_name }} user={{ db_user }} password={{ db_password }} host={{ db_host }} port={{ db_port }}"
NODE_SEED="{{ node_seed }} self"
NODE_HOME_DOMAIN="example.com"
NODE_IS_VALIDATOR=true
CATCHUP_COMPLETE=true
DEPRECATED_SQL_LEDGER_STATE=false
HTTP_PORT={{ http_port }}
PUBLIC_HTTP_PORT=false
WORKER_THREADS=2
MAX_CONCURRENT_SUBPROCESSES=4
NETWORK_PASSPHRASE="Public Global Stellar Network ; September 2015"

# don't use maintenance during catchup
AUTOMATIC_MAINTENANCE_PERIOD=0
AUTOMATIC_MAINTENANCE_COUNT=0
UNSAFE_QUORUM=true

